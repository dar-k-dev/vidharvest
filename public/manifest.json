    }
  ],
  
  "categories": [
    "productivity",
    "utilities",
    "multimedia"
  ],
  
  "shortcuts": [
    {
      "name": "New Download",
      "short_name": "Download",
      "description": "Start a new video download",
      "url": "/?action=new-download",
      "icons": [
        {
          "src": "/images/shortcut-download.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "View History",
      "short_name": "History",
      "description": "View download history",
      "url": "/?action=view-history",
      "icons": [
        {
          "src": "/images/shortcut-history.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Settings",
      "short_name": "Settings",
      "description": "Open app settings",
      "url": "/?action=settings",
      "icons": [
        {
          "src": "/images/shortcut-settings.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "video/*": [".mp4", ".mkv", ".avi", ".mov", ".wmv", ".flv", ".webm"],
        "audio/*": [".mp3", ".wav", ".flac", ".aac", ".ogg", ".m4a"]
      }
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+vidharvest",
      "url": "/?url=%s"
    }
  ],
  
  "prefer_related_applications": false,
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://vidharvest.pro/manifest.json"
    }
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "handle_links": "preferred",
  
  "capture_links": "new-client"
}